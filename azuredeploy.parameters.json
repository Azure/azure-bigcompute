{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dnsLabelPrefix": {
      "value": "shellazure"
    },
    "adminUserName": {
      "value": "azureuser",
        "metadata": {
        "description": "The admin user to Logon to the HPC master and workers"
      }
    },
    "sshPublicKey": {
      "value": "GEN-SSH-PUB-KEY"
    },
    "hpcUserName": {
      "value": "hpc",
        "metadata": {
        "description": "The Internal hpcUsername which is not allowed external access from outside the cluster"
      }
    },
    "mountFolder": {
      "value": "/data",
        "metadata": {
        "description": "The shared folder system mounted on the master and shared between the workers via the munge key."
      }
    },
    "MUNGE_VER": {
      "value": "0.5.11"
    },
    "SLURM_VER": {
      "value": "15-08-10-1"
    },
    "MUNGE_USER_GROUP": {
      "value": "munge"
    },
    "SLURM_USER_GROUP": {
      "value": "slurm"
    },
    "headNodeSize": {
      "value": "Standard_NC12"
    },
    "workerNodeSize": {
      "value": "Standard_NC24"
    },
    "workerNodeCount": {
      "value": 8,
        "metadata": {
        "description": "The number of worker nodes."
      }
    },
    "storageType": {
      "value": "Standard_LRS"
    },
    "dockerVer": {
      "value": "1.12"
    },
    "dockerComposeVer": {
      "value": "1.9.0-rc1"
    },
    "dockerMachineVer": {
      "value": "0.8.2"
    },
    "dataDiskSize": {
      "value": 1022,
        "metadata": {
        "description": "The  Data Disk Size of each Disk to be created"
      }
    },
